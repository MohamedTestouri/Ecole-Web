{% extends 'back/base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block main %}
    <h1 align="center"> GESTION RECLAMATIONS </h1>


    {% block search2 %}
        <form method="post" action="{{ path('recherche') }}">
            <li class="nav-item nav-search"><a class="nav-link nav-link-search" href="#"><i class="ficon ft-search" ></i></a>
                <div class="search-input" >
                    <input class="input" type="text" name="rs" placeholder="search...">
                </div>
            </li>
        </form>
    {% endblock %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Commentaire</th>
                <th>Date_reclamation</th>
                <th>Etat</th>
                <th>Afficher</th>
                <th>Modifier</th>

            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.categorie.type }}</td>
                <td>{{ reclamation.commentaire }}</td>
                <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.etat }}</td>

                <td>
                    <button  type="button" class="btn btn-dark" >
                        <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}">Afficher</a>
                    </button>
                </td>
                <td>
                    <button  type="button" class="btn btn-dark" >
                        <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">Modifier</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
