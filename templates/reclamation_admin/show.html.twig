{% extends 'back/index.html.twig' %}


{% block title %}Reclamation{% endblock %}

{% block bodyback %}
    <h1 align="center">AFFICHER UNE RECLAMATION</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ reclamation.commentaire }}</td>
            </tr>
            <tr>
                <th>Date_reclamation</th>
                <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ reclamation.etat }}</td>
            </tr>
        </tbody>
    </table>

    <div style="text-align: right" >
        <button  class="btn btn-dark" >
            <a href="{{ path('reclamation_index', {'id':1} )   }} " align="center">Retour à la liste des réclamations</a>
        </button>
    </div>



    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
