{% extends 'back/index.html.twig' %}
{% block title %}Publicite index{% endblock %}
{% block lien %}<!-- BEGIN VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="../../../app-assets/css/vendors.css">
    <link rel="stylesheet" type="text/css" href="../../../app-assets/vendors/css/extensions/unslider.css">
    <link rel="stylesheet" type="text/css" href="../../../app-assets/vendors/css/weather-icons/climacons.min.css">
    <link rel="stylesheet" type="text/css" href="../../../app-assets/fonts/meteocons/style.css">
    <link rel="stylesheet" type="text/css" href="../../../app-assets/vendors/css/charts/morris.css">
    <!-- END VENDOR CSS-->
{% endblock %}
{% block bodyback %}
    <div class="row match-height">
        {% for publicite in publicites %}
        <div class="col-xl-4 col-lg-12">
            <div class="card" style="height:auto">
                <div class="card-header">
                    <h4 class="card-title">{{ publicite.libelle }}</h4>
                </div>
                <div class="card-content"  >

                    <img class="img-fluid" src="/assets/img/publicity/{{ publicite.image }}" style="max-height:100%; max-width:100%;"  alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">{{ publicite.description }}</p>
                        <p  class="card-link">{{ publicite.codePromo }}</p>

                    </div>
                </div>
                <div class="card-footer border-top-blue-grey border-top-lighten-5 text-muted">
                    <span class="float-left">From {{ publicite.startDate ? publicite.startDate|date('Y-m-d') : '' }} To {{ publicite.endDate ? publicite.endDate|date('Y-m-d') : '' }} </span>
                    <span class="float-right">
                        <a href={{ path('publicite_show', {'id': publicite.id}) }}" class="card-link"> SHOW<i class="fa fa-angle-right"></i></a>
                        <a href="{{ path('publicite_edit', {'id': publicite.id}) }}" class="card-link"> EDIT<i class="fa fa-angle-right"></i></a>
                    </span>


                </div>

            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}






